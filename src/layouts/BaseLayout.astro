---
import Metadata from "../components/Metadata.astro";

type Props = {
  title: string;
  description: string;
  image?: string;
};

const { title, description, image } = Astro.props;
---

<html>
  <head>
    <Metadata title={title} description={description} image={image} />
  </head>
  <body>
    <main class="max-w-5xl mx-auto p-2">
      <slot />
    </main>
  </body>
</html>
