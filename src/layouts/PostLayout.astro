---
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";

type Props = {
  title: string;
  description: string;
  image: ImageMetadata;
};

const { title, description, image } = Astro.props;
---

<BaseLayout title={title} description={description} image={image.src}>
  <article class="prose mx-auto">
    <h1>{title}</h1>
    <p>{description}</p>
    <Image
      src={image}
      alt={title}
      class="object-cover object-center rounded-lg mx-auto block"
      width={300}
      height={300}
      loading="eager"
    />
    <slot />
  </article>
</BaseLayout>
